    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "g++ build and debug PARSER",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/parserC",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "logging": {
                "trace": true,
                "traceResponse": true 
            },
            "preLaunchTask": "gcc build parser",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}